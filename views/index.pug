extends layout

block content
  nav
    div(class='nav-wrapper')
      a(class='left brand-logo')= title
  div(class='row')
    p Welcome to #{title}! See what is happening now
    p Join #{title} today

  div(class='row') 
  form(method='POST' action='/users/signin' class='col s12 m6 l6' ) Sign In
            div.form-group(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') person      
              div(class='col s10 m4 l4')
                input.form-control(type='text', placeholder='Name' name='name' class='validate')
                label(for='name') Name:
            div.form-group(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') person      
              div(class='col s10 m4 l4')
                input.form-control(type='text', placeholder='New Username' name='user' class='validate')
                label(for='user') User Name:
            div.form-group(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') email      
              div(class='col s10 m4 l4')
                label(for='email') Email:
                input.form-control(type='email', placeholder='Email' name='email' class='validate')    
            div.form-group(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') lock      
              div(class='col s10 m4 l4')
                label(for='password') Password:
                input.form-control(type='password', placeholder='Password' name='password' class='validate')
            div.form-group(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') lock      
              div(class='col s10 m4 l4')
                label(for='password') Confirm Password:
                input.form-control(type='password', placeholder='Password' name='password2' class='validate')
            button.btn.btn-primary(type='submit') Sign In
    
  form(method='POST' action='/users/login' class='col s12 m6' ) Log In
            div(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') person      
              div(class='input-field col s10 m4 l4')
                input.form-control(type='text', placeholder='New User Name' name='author' class='validate')
                label(for='name') Name:
            div(class='row')
              div(class='col s2 m2 l2')
                i(class='medium material-icons circle') lock      
              div(class='input-field col s10 m4 l4')
                label(for='password') Password:
                input.form-control(type='password', placeholder='Password' name='password' class='validate')
            button.btn.btn-primary(type='submit') Log In